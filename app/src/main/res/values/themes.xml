<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BankApplication" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/background_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- font -->
        <item name="android:fontFamily">@font/verdana</item>

    </style>


    <style name="FontBold">
        <item name="android:fontFamily">@font/verdana_bold</item>
    </style>

    <style name="FontText">
        <item name="android:fontFamily">@font/verdana</item>
    </style>

    <!-- medium-->
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/verdana</item>
    </style>

</resources>