<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.nutchanok.nat.bankapplication.model.TransactionModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer In" />

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/tv_title"
                android:gravity="end"
                android:text="20 Nov 2019 - 12:00" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="-1,500.00" />

        <ImageView
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_arrow_down" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/black" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_from_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From account no." />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/tv_from_account_title"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_from_account_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Krungthai" />

                <TextView
                    android:id="@+id/tv_from_account_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX-X-XX234-0" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_from_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From account name" />

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/tv_from_title"
                android:gravity="end"
                android:text="Varee Meetang" />

        </RelativeLayout>

    </LinearLayout>
</layout>